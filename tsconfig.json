{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "esModuleInterop": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "@src/*": ["*"],
        "@user/*": ["user/*"],
        "@services/*": ["gateways/*"],
        "@cross/*": ["cross/*"]
      },
      "keyofStringsOnly": true,
      "downlevelIteration": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
